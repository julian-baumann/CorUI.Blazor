@using CorUI

<div class="demo-container">
    <h1 class="demo-title">List & ListItem</h1>

    <div class="demo-section">
        <h4 class="demo-section-title">Basic List</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <List>
                <ListItem>First item</ListItem>
                <ListItem>Second item</ListItem>
                <ListItem>Third item</ListItem>
            </List>
        </div>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">With Dividers</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <List>
                <ListItem>Profile Settings</ListItem>
                <Divider />
                <ListItem>Notifications</ListItem>
                <Divider />
                <ListItem>Privacy</ListItem>
                <Divider />
                <ListItem>Help & Support</ListItem>
            </List>
        </div>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">Interactive List</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <List>
                <ListItem>
                    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                        <span>Dark Mode</span>
                        <Toggle />
                    </div>
                </ListItem>
                <ListItem>
                    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                        <span>Notifications</span>
                        <Toggle />
                    </div>
                </ListItem>
                <ListItem>
                    <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                        <span>Sound Effects</span>
                        <Toggle />
                    </div>
                </ListItem>
            </List>
        </div>
    </div>
</div> 
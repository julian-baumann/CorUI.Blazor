<div class="demo-container">
    <h1 class="demo-title">Input Group</h1>
    <p class="demo-description">Wrap inputs with a label and optional content. Use <code>InputGroup</code> for consistent spacing.</p>

    <div class="demo-section">
        <h4 class="demo-section-title">Basic Inputs</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <InputGroup Title="Name">
                <input placeholder="Enter your name" />
            </InputGroup>
            <InputGroup Title="Email">
                <input type="email" placeholder="Enter your email" />
            </InputGroup>
            <InputGroup Title="Password">
                <input type="password" placeholder="Enter your password" />
            </InputGroup>
        </div>
        <CodeBlock>
@("<InputGroup Title=\"Name\">\n  <input />\n</InputGroup>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">With Description</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <InputGroup Title="API Key">
                <input value="sk-1234567890abcdef" readonly />
            </InputGroup>
            <InputGroup Title="Username">
                <input placeholder="Choose a username" />
            </InputGroup>
        </div>
        <CodeBlock>
@("<InputGroup Title=\"API Key\"><input readonly /></InputGroup>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">With Custom Content</h4>
        <div class="demo-content" style="flex-direction: column; align-items: stretch; max-width: 400px;">
            <InputGroup Title="Theme">
                <SegmentedControl 
                    Options="@(new[] { "Light", "Dark", "System" })"
                    @bind-SelectedOption="theme" />
            </InputGroup>
            <InputGroup Title="Notifications">
                <Toggle Title="Enable notifications" />
            </InputGroup>
        </div>
        <CodeBlock>
@("<InputGroup Title=\"Theme\">\n  <SegmentedControl Options=\"...\" @bind-SelectedOption=\"theme\" />\n</InputGroup>")
        </CodeBlock>
    </div>
</div>

@code {
    private string theme = "Light";
} 
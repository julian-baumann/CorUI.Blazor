<div class="demo-container">
    <h1 class="demo-title">Button</h1>
    <p class="demo-description">Buttons trigger actions. Use classes to style variants and sizes.</p>
    
    <div class="demo-section">
        <h4 class="demo-section-title">Button Variants</h4>
        <div class="demo-content">
            <Button>Secondary Button</Button>
            <Button class="primary">Primary Button</Button>
            <Button class="danger">Danger Button</Button>
        </div>
        <CodeBlock>
@("<Button>Secondary Button</Button>\n<Button class=\"primary\">Primary Button</Button>\n<Button class=\"danger\">Danger Button</Button>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">Button Sizes</h4>
        <div class="demo-content">
            <Button class="small">Small Button</Button>
            <Button>Default Size</Button>
            <Button class="large">Large Button</Button>
        </div>
        <CodeBlock>
@("<Button class=\"small\">Small</Button>\n<Button>Default</Button>\n<Button class=\"large\">Large</Button>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">States</h4>
        <div class="demo-content">
            <Button>Disabled Button</Button>
            <Button class="primary">Disabled Primary</Button>
            <Button>
                <Spinner Size="Spinner.SpinnerSize.Small" />
                Loading...
            </Button>
            <Button class="primary">
                <Spinner Size="Spinner.SpinnerSize.Small" />
                Processing
            </Button>
        </div>
        <CodeBlock>
@("<Button disabled>Disabled</Button>\n<Button class=\"primary\" disabled>Disabled Primary</Button>\n<Button><Spinner Size=\"Spinner.SpinnerSize.Small\" /> Loading...</Button>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">With Icons</h4>
        <div class="demo-content">
            <Button>
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8 3.5V12.5M3.5 8H12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
                Add Item
            </Button>
            <Button class="primary">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.5 4L6 11.5L2.5 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Save Changes
            </Button>
            <Button class="danger">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13 3L3 13M3 3L13 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
                Delete
            </Button>
        </div>
        <CodeBlock>
@("<Button><svg .../> Add Item</Button>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">Common Actions</h4>
        <div class="demo-content">
            <Button tint="primary">Sign In</Button>
            <Button>Cancel</Button>
            <Button tint="danger">Remove</Button>
        </div>
        <CodeBlock>
@("<Button tint=\"primary\">Sign In</Button>")
        </CodeBlock>
    </div>
</div> 
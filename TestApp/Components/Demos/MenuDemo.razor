<div class="demo-container">
    <h1 class="demo-title">Menu</h1>
    <p class="demo-description">Menus wrap a trigger and a content section. Use <code>Menu</code>, <code>MenuButton</code>, and <code>MenuContent</code>.</p>

    <div class="demo-section">
        <h4 class="demo-section-title">Button Menu</h4>
        <div class="demo-content">
            <Menu>
                <MenuButton>
                    Open Menu
                </MenuButton>
                <MenuContent>
                    <List>
                        <ListItem>Menu Item 1</ListItem>
                        <ListItem>Menu Item 2</ListItem>
                        <ListItem>Menu Item 3</ListItem>
                    </List>
                </MenuContent>
            </Menu>
        </div>
        <CodeBlock>
@("<Menu>\n  <MenuButton>Open Menu</MenuButton>\n  <MenuContent>...items...</MenuContent>\n</Menu>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">Icon Button Menu</h4>
        <div class="demo-content">
            <Menu IconButton="true">
                <MenuButton>
                    â‹®
                </MenuButton>
                <MenuContent>
                    <List>
                        <ListItem>Settings</ListItem>
                        <ListItem>Profile</ListItem>
                        <ListItem>Logout</ListItem>
                    </List>
                </MenuContent>
            </Menu>
        </div>
        <CodeBlock>
@("<Menu IconButton=\"true\">...</Menu>")
        </CodeBlock>
    </div>

    <div class="demo-section">
        <h4 class="demo-section-title">Context Menu</h4>
        <div class="demo-content">
            <Menu IsContextMenu="true">
                <ContextTrigger>
                    <div style="padding: 1rem; border: 1px solid var(--card-border-color); border-radius: 6px; background: var(--nav-bar-background);">
                        Right-click or long press this area to open context menu
                    </div>
                </ContextTrigger>
                <MenuContent>
                    <div class="button-list">
                        <button>Clicky Button 1</button>
                        <button>Clicky Button 2</button>
                        <button>Clicky Button 3</button>
                        <button>Clicky Button 4</button>
                        <button>Clicky Button 5</button>
                    </div>
                </MenuContent>
            </Menu>
        </div>
        <CodeBlock>
@("<Menu IsContextMenu=\"true\">\n  <ContextTrigger>...area...</ContextTrigger>\n  <MenuContent>...</MenuContent>\n</Menu>")
        </CodeBlock>
    </div>
</div> 